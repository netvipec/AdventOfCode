    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch",
            "type": "lldb",
            "request": "launch",
            "program": "./main",
            "args": [
                "<",
                "input"
            ],
            "cwd": "${workspaceFolder}",
            "preRunCommands": [
                "command source ~/.lldbinit"
            ]
        },
        {
            "name": "(gdb) Launch - Test",
            "type": "lldb",
            "request": "launch",
            "program": "./main",
            "args": [
                "<",
                "input.test"
            ],
            "cwd": "${workspaceFolder}",
            "preRunCommands": [
                "command source ~/.lldbinit"
            ]
        }
    ]
}